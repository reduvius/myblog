{% extends 'layouts/layout.twig' %}

{% block title %}
    New Post
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="/src/public/css/new-post-edit-post.css" />
{% endblock %}

{% block content %}
    <div class="col-3 col-s-1"></div>
    <div class="col-6 col-s-10">
        <!-- NEW POST FORM -->
        <div id="container">
            <h1><i class='far fa-sticky-note'></i> Add new post</h1>

            {% if errorMessage is defined %}
                <p id="err"><strong>{{ errorMessage }}</strong></p>
            {% endif %}

            <p id="val-info"></p>

            <form name="new-form" action="/new-post" method="post"
                onsubmit="return validateNewForm()">
                <label for="title"><i class='fas fa-pen'></i> Title</label>
                <input type="text" name="title">

                <label for="content">
                    <i class='fas fa-align-justify'></i> Text
                </label>
                <textarea name="content" rows="12"></textarea>

                <input type="submit" value="Save">
            </form>
        </div>
    </div>
    <div class="col-3 col-s-1"></div>
{% endblock %}

{% block js %}
    <script src="/src/public/js/new-post-edit-post.js"></script>
{% endblock %}
