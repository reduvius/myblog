{% extends 'layout.twig' %}

{% block title %}
    {{ post.title }}
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="/src/views/css/post.css" />
{% endblock %}

{% block content %}

    {% if not isAuth %}
        <!-- ostavljam opciju neimplementiranu za sada -->
    {% endif %}

    <!-- MAIN DIV ELEMENT -->
    <div id="main" class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div id="post-content">
                <h2>{{ post.title }}</h2>
                <hr>
                <div id="sec1">
                    <div>
                        <i class="fa">&#xf017;</i>
                        <p>{{ post.date }}</p>
                        <p>|</p>
                        <i class="fa">&#xf007;</i>
                        <p>Posted by: {{ post.name }}</p>
                        <p>|</p>
                        <i class="fa">&#xf075;</i>
                    </div>
                    <div>
                        <p id="show-size">Text size <span>▸</span></p>
                        <button id="default">default</button>
                        <button id="increase">+</button>
                        <button id="decrease">‒</button>
                    </div>
                </div>
                <div id="pst-cnt">{{ post.content }}</div>
                <hr>
                <div id="sec2">
                    <p id="comm">Show comment section ▾</p>
                    {% if isAuth and post.userId == uId %}
                        <a id="del" href="/delete-post/{{ post.id }}"
                            title="Delete post"><i class="fa fa-trash-o"></i>
                        </a>
                        <a title="Edit post"><i class="fa">&#xf044;</i></a>
                    {% endif %}
                </div>
            </div>
            <!-- COMMENT SECTION -->
            <div id="comment-section">
                <form name="comm-form" onsubmit="return validateForm()">
                    <input type="text" name="comm-name"
                        placeholder="Enter your name">

                    <textarea rows="2" name="comment" maxlength="500">
                    </textarea>

                    <input type="submit" value="Save">
                </form>
            </div>
        </div>
        <div class="col-3"></div>
    </div>

{% endblock %}

{% block js %}
    <script src="/src/views/js/post.js"></script>
{% endblock %}
