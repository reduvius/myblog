{% extends 'layouts/layout.twig' %}

{% block title %}
    Posts
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="/src/public/css/posts.css" />
{% endblock %}

{% block content %}

    <div class="col-3 col-s-1"></div>
    <div class="col-6 col-s-10">
        {% for post in posts %}
            <div class="post-content">
                <h2><a href="/post/{{ post.id }}">{{ post.title }}</a></h2>
                <hr>
                <div class="post-info">
                    <i class='fas fa-clock'></i>
                    <p>{{ post.date }}</p>
                    <p>|</p>
                    <i class='fas fa-user'></i>
                    <p>Posted by: {{ post.name }}</p>
                    <p>|</p>
                    <i class='fas fa-comment'></i>
                    <p>0</p>
                </div>
                <div class="pst-cnt">{{ post.content }}</div>
            </div>
        {% endfor %}
    </div>
    <div class="col-3 col-s-1"></div>

    <!-- PAGINATION -->
    <div class="col-12" id="pagination">
        {% if currentPage != 1 %}
            <a class="pgs" href="/posts/1">
                <i class='fas fa-angle-double-left'></i> First Page
            </a>
            <a class="pgs" href="/posts/{{ currentPage - 1 }}">
                <i class='fas fa-angle-left'></i>
            </a>
        {% endif %}

        {% for page in pagesArray %}
            {% if currentPage == page %}
            <a id="pgs-act" href="/posts/{{ page }}">{{ page }}</a>
            {% else %}
            <a class="pgs" href="/posts/{{ page }}">{{ page }}</a>
            {% endif %}
        {% endfor %}

        {% if currentPage < lastPage %}
            <a class="pgs" href="/posts/{{ currentPage + 1 }}">
                <i class='fas fa-angle-right'></i>
            </a>
            <a class="pgs" href="/posts/{{ lastPage }}">
                Last Page <i class='fas fa-angle-double-right'></i>
            </a>
        {% endif %}
    </div>

{% endblock %}

{% block js %}
    <script src="/src/public/js/posts.js"></script>
{% endblock %}
