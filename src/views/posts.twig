{% extends 'layout.twig' %}

{% block title %}
    Articles
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="/src/views/css/posts.css" />
{% endblock %}

{% block content %}

    <div class="col-3 col-s-1"></div>
    <div class="col-6 col-s-10">
        {% for post in posts %}
            <div class="post-content">
                <h2><a href="/post/{{ post.id }}">{{ post.title }}</a></h2>
                <hr>
                <div class="post-info">
                    <i class="fa">&#xf017;</i>
                    <p>{{ post.date }}</p>
                    <p>|</p>
                    <i class="fa">&#xf007;</i>
                    <p>Posted by: {{ post.name }}</p>
                    <p>|</p>
                    <i class="fa">&#xf075;</i>
                </div>
                <div class="pst-cnt">{{ post.content }}</div>
            </div>
        {% endfor %}
    </div>
    <div class="col-3 col-s-1"></div>

    <!-- PAGINATION -->
    <div class="col-12" id="pagination">
        {% if currentPage != 1 %}
            <a class="pgs" href="/posts/1">&laquo First Page<a>
            <a class="pgs" href="/posts/{{ currentPage - 1 }}">‹</a>
        {% endif %}

        {% for page in pagesArray %}
            {% if currentPage == page %}
            <a id="pgs-act" href="/posts/{{ page }}">{{ page }}</a>
            {% else %}
            <a class="pgs" href="/posts/{{ page }}">{{ page }}</a>
            {% endif %}
        {% endfor %}

        {% if currentPage < lastPage %}
            <a class="pgs" href="/posts/{{ currentPage + 1 }}">›</a>
            <a class="pgs" href="/posts/{{ lastPage }}">Last Page &raquo<a>
        {% endif %}
    </div>

{% endblock %}

{% block js %}
    <script src="/src/views/js/posts.js"></script>
{% endblock %}
